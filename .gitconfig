[user]
    name = Ryan Arana
    email = ryan.arana@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    excludesfile = ~/.gitignore_global
    editor = /usr/bin/vim
[credential]
    helper = osxkeychain
[push]
    default = simple

[alias]
    ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
    in = !git fetch && git log master..FETCH_HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset%s %C(blue)%an%Creset %Cgreen(%cr)' --abbrev-commit --date=relative
    out = !git fetch && git log FETCH_HEAD..master
    pr = pull -r
    revert = checkout
    rollback = reset --soft HEAD~1
    st = status
    stat = status
    this = !git init && git add . && git commit -m \"initial commit\"
